<h4><%= I18n.t(:activecalls) %></h4>

<table  id="accountsTable" class="table table-hover table-product" style="width:98%">
    <tr><td></td>
    <td><%= I18n.t(:caller) %></td><td><%= I18n.t(:called) %></td><td><%= I18n.t(:start) %></td><td><%= I18n.t(:direction) %></td><td><%= I18n.t(:duration) %></td><td><%= I18n.t(:app) %></td><td><%= I18n.t(:status) %></td>
<td></td>

    </tr>


  <% @siponlines.each do |online| %>
    <tr>
<td>
<% if online["direction"] == :out  %>
<span class="mdi mdi-name text-success"><i class="fa fa-share" aria-hidden="true"></i></span>
<% else %>
<span class="mdi mdi-name text-info"><i class="fa fa-reply-all" aria-hidden="true"></i></span>
<% end %>
</td>
<td><%= online["caller"] %></td>
<td><%= online["called"] %></td>
<td><%= online["started"].to_s[0..19] %></td>

<td><%= online["direction"] %></td>
<td><%= online["duration"] %></td>
<td><%= online["appname"] %></td>
<td><%= online["status"] %></td>
<td>
<% if @bridgesonlines[online["callid"]] == 1 %>
<div class="btn-group mb-1 col-1">
          <button type="button" class="btn btn-success btn-pill"><i class="fa fa-phone-square"></i></button>
          <button type="button" class="btn btn-success btn-pill dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-display="static">
            <span class="sr-only">Toggle Dropdown</span>
          </button>
          <div class="dropdown-menu">
          <%= link_to "Spy", "javascript:makeCall('1','"+online["name"]+"')", class: 'dropdown-item' %>
          <%= link_to "Whisper", "javascript:makeCall('2','"+online["name"]+"')", class: 'dropdown-item' %>
          <%= link_to "Barge", "javascript:makeCall('3','"+online["name"]+"')", class: 'dropdown-item' %>
          </div>
</div>
<% end %>
</td>


    </tr>
  <% end %>



</table>

