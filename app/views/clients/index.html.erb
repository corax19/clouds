<p style="color: green"><%= notice %></p>

<h4>Clients Here</h2>
<%= link_to "Excel", clients_path(format: "xlsx"), class: "btn btn-xs btn-info btn-pill col-1"%>
<%== pagy_bootstrap_nav(@pagy) %>
<table  id="productsTable01" class="table table-hover table-product" style="width:98%">
    <tr>
    <td>ID NUM</td><td>Name</td><td>E-mail</td><td>Phones</td><td>Address</td><td>Birthday</td>
    <td style="width:55px" align="right"><a class="dropdown-item" href="../clients/new"><button type="button" class="mb-1 btn btn-success"><i class="fa fa-plus-circle" aria-hidden="true"></i>New</button></a></td>


    </tr>

<% @clients.each do |client| %>
    <tr>


<td> <%= client.idnum %></td><td><%= client.firstname %> <%= client.firstname %></td><td><%= client.email %></td><td><%= client.phone1 %> <%= client.phone2 %> <%= client.phone3 %></td><td><%= client.country %> <%= client.city %> <%= client.address %></td><td><%= client.birthday %></td>
          <td style="width:50px" align="right">
            <div class="dropdown" style="width:50px">
              <a class="dropdown-toggle icon-burger-mini" href="#" role="button" id="dropdownMenuLink<%= client.id %>"
                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-display="static" style="width:50px">
              </a>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink<%= client.id %>" style="min-width:120px;width:120px;">

<%= button_to "<i class=\"fa fa-sticky-note-o\" aria-hidden=\"true\"></i> Notes</button>".html_safe, notes_path(client), class: 'mb-1 btn btn-primary btn-pill', :method => :get %>

<div class="dropdown-divider"></div>

            <%= button_to "<i class=\"fa fa-pencil-square-o\" aria-hidden=\"true\"></i> Edit</button>".html_safe, edit_client_path(client), class: 'btn btn-info btn-pill', :method => :get %>
<button type="button" class="btn btn-danger btn-pill" data-toggle="modal" data-target="#delModal" data-href="../clients/<%= client.id %>"  onClick="setDelClient(<%= client.id %>)">Delete</button>
              </div>
            </div>
          </td>

    </tr>
  <% end %>



</table>
