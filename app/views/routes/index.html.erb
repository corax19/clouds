<h4>Routes Here</h2>

<table  id="productsTable01" class="table table-hover table-product" style="width:80%">
    <tr>
    <td>Number</td><td>Name</td><td>Record</td><td>Days</td><td>Hours</td><td>Day</td>
    <td style="width:55px" align="right"><a class="dropdown-item" href="../routes/new"><button type="button" class="mb-1 btn btn-success"><i class="fa fa-plus-circle" aria-hidden="true"></i>New</button></a></td>


    </tr>

<% routetooltip="" %>

<% @routes.each do |route| %>
    <tr>


<td title=""  data-toggle="tooltip" data-placement="bottom"  data-original-title="<%= routetooltip %>" > <%= route.sip.number %></td><td><%= route.name %></td><td><%= route.record %></td><td><%= route.daystart %> - <%= route.daystop %></td><td><%= route.hourstart %> - <%= route.hourstop %></td><td><%= route.day %></td>
          <td style="width:50px" align="right">
            <div class="dropdown" style="width:50px">
              <a class="dropdown-toggle icon-burger-mini" href="#" role="button" id="dropdownMenuLink<%= route.id %>"
                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-display="static" style="width:50px">
              </a>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink<%= route.id %>" style="width:50px">
<% if @userpermissionspages['permission_steps'] == 1 %>
<%= button_to "<i class=\"fa fa-bars\" aria-hidden=\"true\"></i> Steps</button>".html_safe, steps_path(route), class: 'mb-1 btn btn-primary btn-pill', :method => :get %>
<% end %>

<%= button_to "<i class=\"fa fa-pencil-square-o\" aria-hidden=\"true\"></i> Edit</button>".html_safe, edit_route_path(route), class: 'btn btn-info btn-pill', :method => :get %>
<button type="button" class="btn btn-danger btn-pill" data-toggle="modal" data-target="#delModal" data-href="../routes/<%= route.id %>"  onClick="setDelRoute(<%= route.id %>)">Delete</button>
              </div>
            </div>
          </td>

    </tr>
  <% end %>



</table>
