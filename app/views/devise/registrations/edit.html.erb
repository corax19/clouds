<h4><%= I18n.t(:edituser) %></h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label I18n.t(:password) %> <i>(<%= I18n.t(:leaveblank) %>)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> <%= I18n.t(:charactersminimum) %></em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label I18n.t(:username) %><br />
    <%= f.text_field :username, autocomplete: "username" %>
  </div>


  <div class="field">
    <%= f.label I18n.t(:firstname) %><br />
    <%= f.text_field :firstname, autocomplete: "firstname" %>
  </div>

  <div class="field">
    <%= f.label I18n.t(:lastname) %><br />
    <%= f.text_field :lastname, autocomplete: "lastname" %>
  </div>

  <div class="field">
    <%= f.label I18n.t(:language) %><br />
    <%= f.select :lang, options_for_select([['English', :en], ['ქართული', :ge],['Русский', :ru]]) , {prompt: "Language"} , {class: "col-2 form-control"}%>

  </div>


  <div class="field">
    <%= f.label I18n.t(:image) %><br />
    <%= f.file_field :image %>
  </div>


  <div class="field">
    <%= f.label I18n.t(:passwordconfirmation) %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label I18n.t(:currentpassword) %> <i>(<%= I18n.t(:needyourcurrentpassword) %>)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>
<br>
  <div class="actions">

<input type="hidden" value="<%= @user.id %>" name="id" id="user_id" />
    <%= f.submit I18n.t(:update), :class => 'btn btn-info btn-pill' %>
  </div>
<% end %>

<br>
