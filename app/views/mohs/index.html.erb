<table  id="productsTable01" class="table table-hover table-product" style="width:80%">
    <tr>
    <td>MOH Name</td>
    <td>MOH Description</td>
    <td style="width:55px" align="right"><a class="dropdown-item" href="../mohs/new"><button type="button" class="mb-1 btn btn-success"><i class="fa fa-plus-circle" aria-hidden="true"></i>New</button></a></td>


    </tr>

  <% @mohs.each do |moh| %>
    <tr>

<td style="width:30%"><%= moh.name %></td>
<td style="width:60%"><%= moh.description %></td>


          <td style="width:50px" align="right">
            <div class="dropdown" style="width:50px">
              <a class="dropdown-toggle icon-burger-mini" href="#" role="button" id="dropdownMenuLink<%= moh.id %>"
                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-display="static" style="width:50px">
              </a>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink<%= moh.id %>" style="min-width:130px;width:130px;">
<%= button_to "<i class=\"fa fa-bars\" aria-hidden=\"true\"></i> Entries</button>".html_safe, mohentries_path(moh), class: 'mb-1 btn btn-primary btn-pill', :method => :get %>
<div class="dropdown-divider"></div>

<%= button_to "<i class=\"fa fa-pencil-square-o\" aria-hidden=\"true\"></i> Edit</button>".html_safe, edit_moh_path(moh), class: 'btn btn-info btn-pill', :method => :get %>
<button type="button" class="btn btn-danger btn-pill" data-toggle="modal" data-target="#delModal" data-href="../mohs/<%= moh.id %>"  onClick="setDelMOH(<%= moh.id %>)">Delete</button>
              </div>
            </div>
          </td>


    </tr>
  <% end %>
</table>

