<h4>Users here</h4>

<br>

<table  id="productsTable01" class="table table-hover table-product" style="width:80%">
    <tr>
    <td colspan=2 align="center">UserName</td>
    <td>First Name</td>
    <td>Last Name</td>
    <td>Email</td>
    <td>Account</td>
    <td style="width:55px"><a class="dropdown-item" href="../users/new"><button type="button" class="mb-1 btn btn-success"><i class="fa fa-plus-circle" aria-hidden="true"></i>New</button></a></td>


    </tr>

  <% @users.each do |user| %>
    <tr>

      <td>

<%= image_tag(user.image.thumb.url, alt: 'Image') if user.image? %>



</td><td> <%= user.username %></td><td><%= user.firstname %></td><td><%= user.lastname %></td><td><%= user.email %></td><td><%= user.account.name %></td>
          <td style="width:50px" align="right">
            <div class="dropdown" style="width:50px">
              <a class="dropdown-toggle icon-burger-mini" href="#" role="button" id="dropdownMenuLink<%= user.id %>"
                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-display="static" style="width:50px">
              </a>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink<%= user.id %>" style="width:50px">

            <%= button_to "<i class=\"fa fa-pencil-square-o\" aria-hidden=\"true\"></i> Edit</button>".html_safe, edit_user_path(user), class: 'btn btn-info btn-pill', :method => :get %>
<button type="button" class="btn btn-danger btn-pill" data-toggle="modal" data-target="#delModal" data-href="../users/<%= user.id %>"  onClick="setDelUser(<%= user.id %>)">Delete</button>
              </div>
            </div>
          </td>

    </tr>
  <% end %>
</table>


